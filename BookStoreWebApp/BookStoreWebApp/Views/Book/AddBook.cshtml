@using BookStoreWebApp.Enum
@model BookModel
@{
    ViewData["Title"] = "AddBook";
    string selectedValue = "English";
}
<div class="container">
    <div class="col-sm-8">
        @* <big>Add Book</big> *@
        <p big>Add Book</p>
        <hr/>
        @if (ViewBag.isSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Congratulations!</strong> You have added new book successfully.<br/>
                Click <a asp-controller="Book" asp-action="GetBook" asp-route-id ="@ViewBag.bookId">here</a> to view the details.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

        }
        
        <button class="btn btn-primary" type="button" disabled id="myLoader" style="display: none">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Loading...
        </button>
        
        <form method="post" data-ajax="true" data-ajax-complete="myComplete"
              data-ajax-success="mySuccess" data-ajax-failure="myFailure" 
              data-ajax-loading="#myLoader" asp-controller="Book" asp-action="AddBook">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MyFiled"></label>
                <input asp-for="MyFiled" class="form-control" required />
                <span asp-validation-for="MyFiled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Author"></label>
                <input asp-for="Author" class="form-control" required />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                @* <label asp-for="LanguageIdId"></label> *@
                @* <select asp-for="LanguageIdId" class="form-control" asp-items="@ViewBag.LanguageIdId" required> *@
                @*     <option value="" selected disabled>Select a language</option> *@
                @* </select> *@
                @* <label asp-for="MultiLanguageIdId"></label> *@
                @* <select asp-for="MultiLanguageIdId" class="form-control" asp-items="@ViewBag.LanguageIdId" multiple required> *@
                @*     <option value="" selected disabled>Select a language</option> *@
                @* </select> *@
                <label asp-for="LanguageId"></label>
                <select asp-for="LanguageId" class="form-control" asp-items="Html.GetEnumSelectList<LanguageEnum>()" required>
                    <option value="" selected disabled>Select a language</option>
                </select>
                @* <select asp-for="LanguageIdId" class="form-control" required> *@
                @*     <option value="" selected disabled >Select a language</option> *@
                @*     <option value="ban">বাংলা</option> *@
                @*     <option value="eng">English</option> *@
                @* </select> *@
                <span asp-validation-for="LanguageId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="TotalPages"></label>
                <input asp-for="TotalPages" class="form-control" required />
                <span asp-validation-for="TotalPages" class="text-danger"></span>
            </div>
            <input type="submit" value="Add Book" class="btn btn-info" />
        </form>


    </div>
</div>
@section script {
    <script>
        myComplete = () => {
            alert("i am form complete");
        }
        mySuccess = () => {
            alert("i am form success");
        }
        myFailure = () => {
            alert("i am form failure");
        }
    </script>
    
}


